<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manoshop.Verify_Activity"
    android:background="#fff">

    <ImageView
        android:id="@+id/img_btn_close_verify"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_btn_close_verify">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="270dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/noyhgeometricslimblack"
            android:lineSpacingExtra="-30dp"
            android:text="@string/verify_tittle"
            android:textColor="#000"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_btn_close_verify" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noyhgeometricslimblack"
            android:text="VERIFICATION"
            android:textColor="#000"
            android:textSize="35dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/montserratmedium"
            android:text="Enter One Time Password Sent On:"
            android:textColor="#444"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_phone_number_verify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserratmedium"
            android:text="phonenumber"
            android:textColor="#222"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <com.chaos.view.PinView
            android:id="@+id/pin_verify"
            style="@style/PinWidget.PinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:inputType="number"
            android:itemBackground="#eee"
            app:itemCount="6"
            app:itemHeight="50dp"
            app:itemWidth="50dp"
            app:lineColor="#444"
            android:cursorVisible="true"
            app:cursorColor="#444"
            app:hideLineWhenFilled="true"
            app:itemRadius="3dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_verify_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:background="#a10e0e"
            android:textColor="#fff"
            android:text="Verify Code"
            android:textStyle="bold"
            android:textSize="18dp"
            android:fontFamily="@font/noyhgeometricslimblack"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>