<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manoshop.ForgotPass2ndScreen_Activity"
    android:background="#fff">

    <ImageView
        android:id="@+id/img_btn_back_2nd"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:tint="#000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gradient_ic_back" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_btn_back_2nd">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:fontFamily="@font/noyhgeometricslimblack"
            android:textSize="70dp"
            android:textColor="#000"
            android:lineSpacingExtra="-5dp"
            android:layout_marginStart="20dp"
            android:text="@string/second_screen_forgot_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/second_screen_forgot_des"
            android:fontFamily="@font/montserratmedium"
            android:textColor="#555"
            android:textSize="18dp"
            android:layout_marginStart="20dp"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bg_ip_edt"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp">

            <Button
                android:id="@+id/btn_via_sms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" />

            <ImageView
                android:id="@+id/img_via_sms"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_via_sms"
                android:layout_marginStart="20dp"
                android:tint="#222"/>

            <TextView
                android:id="@+id/txt_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_via_sms"
                android:layout_toRightOf="@+id/img_via_sms"
                android:fontFamily="@font/montserratregular"
                android:text="Via sms:"
                android:textColor="#5e5e5e"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/txt_via_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_vs"
                android:layout_alignStart="@+id/txt_vs"
                android:layout_toRightOf="@+id/img_via_sms"
                android:fontFamily="@font/montserratregular"
                android:text="1234567890"
                android:textSize="17dp"
                android:textColor="#222"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bg_ip_edt"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/btn_via_mail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"/>

            <ImageView
                android:id="@+id/img_via_mail"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_via_mail"
                android:layout_marginStart="20dp"
                android:tint="#222"/>

            <TextView
                android:id="@+id/txt_vm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_via_mail"
                android:layout_toRightOf="@+id/img_via_mail"
                android:fontFamily="@font/montserratregular"
                android:text="Via mail:"
                android:textColor="#5e5e5e"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                android:layout_marginStart="30dp"/>

            <TextView
                android:id="@+id/txt_via_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_vm"
                android:layout_alignStart="@+id/txt_vm"
                android:layout_toRightOf="@+id/img_via_mail"
                android:text="manostore@gmail.com"
                android:fontFamily="@font/montserratregular"
                android:textSize="17dp"
                android:textColor="#222"
                android:layout_marginTop="5dp"/>

        </RelativeLayout>
        
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>