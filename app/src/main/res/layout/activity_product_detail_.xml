<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#faefe9"
    tools:context="com.example.manoshop.ProductDetail_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btn_de_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btnaddtocart"
            android:fontFamily="@font/montserratmedium"
            android:gravity="center"
            android:text="Add To Cart"
            android:textColor="#fff"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_product_de_brand" />

        <ImageView
            android:id="@+id/imgcornershape"
            android:layout_width="210dp"
            android:layout_height="210dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:srcCompat="@drawable/cornershape" />

        <ImageView
            android:id="@+id/img_product_de"
            android:layout_width="0px"
            android:layout_height="450dp"
            android:scaleType="centerCrop"
            android:transitionName="trans_item_rec_to_act"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_btn_product_de_to_cart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/circleviewqly"
            android:padding="10dp"
            android:src="@drawable/gradient_ic_cart_w"
            app:layout_constraintBottom_toBottomOf="@+id/img_btn_product_de_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/img_btn_product_de_back" />

        <ImageView
            android:id="@+id/img_btn_product_de_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circlebtn"
            android:padding="5dp"
            android:tint="#fff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/gradient_ic_back" />

        <Spinner
            android:id="@+id/spinner_detail_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_product_de_price"
            app:layout_constraintStart_toStartOf="@+id/txtSizeTittle"
            app:layout_constraintTop_toTopOf="@+id/txt_product_de_price" />

        <TextView
            android:id="@+id/txtPriceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/nephilm"
            android:text="Price"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toTopOf="@+id/imgcornershape" />

        <TextView
            android:id="@+id/txtSizeTittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="90dp"
            android:fontFamily="@font/nephilm"
            android:text="Size"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtPriceTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtPriceTitle"
            app:layout_constraintTop_toTopOf="@+id/txtPriceTitle" />


        <TextView
            android:id="@+id/txt_product_de_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nephilm"
            android:hint="Price"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/txtPriceTitle"
            app:layout_constraintTop_toBottomOf="@+id/txtPriceTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="$"
            android:textColor="#fff"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_product_de_price"
            app:layout_constraintStart_toEndOf="@+id/txt_product_de_price"
            app:layout_constraintTop_toTopOf="@+id/txt_product_de_price" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nephilm"
            android:text="Brand"
            android:textColor="#000"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtSizeTittle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtSizeTittle"
            app:layout_constraintTop_toTopOf="@+id/txtSizeTittle" />

        <TextView
            android:id="@+id/txt_product_de_brand"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nephilm"
            android:hint="Brand"
            android:textColor="#000"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="@+id/textView19"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="350dp"
            android:layout_marginEnd="20dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_btn_product_de_back">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iconHeart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/gradient_ic_fav_nc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txt_product_de_name"
                    app:layout_constraintTop_toTopOf="@+id/txt_product_de_name" />

                <ImageView
                    android:id="@+id/btnMoreDetail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="30dp"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/iconHeart"
                    app:layout_constraintHorizontal_bias="0.6"
                    app:layout_constraintStart_toStartOf="@+id/iconHeart"
                    app:srcCompat="@drawable/gradient_ic_ar_right" />

                <TextView
                    android:id="@+id/txt_product_de_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="70dp"
                    android:fontFamily="@font/nephilm"
                    android:hint="Mai Davika Beauty In Flower Dress"
                    android:textColor="#A10E0E"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_product_de_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/nephilm"
                    android:hint="Beautiful dress with white chrysanthemum motifs"
                    android:textSize="17dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/txt_product_de_name" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>