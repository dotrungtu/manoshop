<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manoshop.SplashScreen_Activity"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="348dp"
        android:layout_height="363dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:tint="#a10e0e"
        android:src="@drawable/imglogo"
        />

    <TextView
        android:id="@+id/txtLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/funcitylevel3basic"
        android:text="MANO"
        android:textColor="#a10e0e"
        android:textSize="70dp" />

    <TextView
        android:id="@+id/txtHashtag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/manifesto"
        android:text="#LookAtUrBeauty"
        android:textColor="#a10e0e"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>