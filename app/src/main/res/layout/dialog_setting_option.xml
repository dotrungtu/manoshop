<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <RelativeLayout
        android:id="@+id/rela_lay1"
        android:layout_width="380dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn_dia_change_ava"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null" />

        <ImageView
            android:id="@+id/seop1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/gradient_ic_ava" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/seop1"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/montserratmedium"
            android:text="Change Your Avatar"
            android:textColor="#000"
            android:textSize="17dp" />
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_lay2"
            android:layout_width="380dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rela_lay1">

            <Button
                android:id="@+id/btn_dia_change_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" />

            <ImageView
                android:id="@+id/seop2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/gradient_ic_rename" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/seop2"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/montserratmedium"
                android:text="Change Your Name"
                android:textColor="#000"
                android:textSize="17dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_lay3"
            android:layout_width="380dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rela_lay2">

            <Button
                android:id="@+id/btn_dia_change_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" />

            <ImageView
                android:id="@+id/seop3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/gradient_ic_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/seop3"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/montserratmedium"
                android:text="Change Phone Number"
                android:textColor="#000"
                android:textSize="17dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rela_lay4"
            android:layout_width="380dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rela_lay3">

            <Button
                android:id="@+id/btn_dia_change_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null" />

            <ImageView
                android:id="@+id/seop4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleY="1.2"
                android:scaleX="1.2"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/gradient_ic_address" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/seop4"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/montserratmedium"
                android:text="Change Your Address"
                android:textColor="#000"
                android:textSize="17dp" />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rela_lay5"
        android:layout_width="380dp"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rela_lay4">

        <Button
            android:id="@+id/btn_dia_change_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null" />

        <ImageView
            android:id="@+id/seop5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/gradient_ic_change_password" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/seop5"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/montserratmedium"
            android:text="Change Your Password"
            android:textColor="#000"
            android:textSize="17dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>