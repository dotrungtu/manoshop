<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="400dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#00000000"
    android:layout_marginEnd="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_product_sale"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/maidavika_"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/view2"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/view_corner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:layout_width="70dp"
            android:layout_height="1dp"
            android:background="#000"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/txt_pro_sale_old_price"
            app:layout_constraintEnd_toEndOf="@+id/txt_pro_sale_old_price"
            app:layout_constraintStart_toStartOf="@+id/txt_pro_sale_old_price"
            app:layout_constraintTop_toTopOf="@+id/txt_pro_sale_old_price" />

        <TextView
            android:id="@+id/txt_pro_sale_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/funcitylevel3basic"
            android:text="2000"
            android:textColor="#777"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2" />

        <TextView
            android:id="@+id/txt_pro_sale_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="28dp"
            android:fontFamily="@font/funcitylevel3basic"
            android:text="1000"
            android:textColor="#FF5722"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/view2" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_dollar"
            android:tint="#FF5722"
            android:alpha="0.3"
            app:layout_constraintBottom_toBottomOf="@+id/txt_pro_sale_new_price"
            app:layout_constraintEnd_toEndOf="@+id/txt_pro_sale_new_price"
            app:layout_constraintStart_toStartOf="@+id/txt_pro_sale_new_price"
            app:layout_constraintTop_toTopOf="@+id/txt_pro_sale_new_price" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>